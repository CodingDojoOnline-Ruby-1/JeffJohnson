<!DOCTYPE html>
<html>
<head>
	<title>Users#show</title>
</head>
<body>

<div id="container">
<h1>All the Users</h1>
	<h2 id="leader_text">Listing users:</h2>
	<div id="display">
	<table>
		<tr>
			<!-- <th>id</th> -->
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Action Select</th>
		</tr>
		<% for user in @users %>
		<tr>
			<!-- <td><%= user.id %></td> -->
			<td><%= user.first_name %></td>
			<td><%= user.last_name %></td>
			<td><%= user.email %></td>
			<td><a href="/users/<%= user.id %>/show">Show</a> | <a href="/users/<%= user.id %>/edit">Edit</a> | <%= link_to "Destroy", kill_user_path(:id => user.id), method: "delete" %></td>
		</tr>	
		<% end %>
	</table>	
	</div>
	<div class="optionlinks">
		<a href="/users/new">New User</a>
	</div>
	
</div> 	
</body>
</html>

